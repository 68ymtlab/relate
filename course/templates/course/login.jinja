{% extends "base.html" %}

{% load crispy_forms_tags %}

{% block content %}
  <h1>Sign in</h1>

  <div class="alert alert-warning">
    If you have a not been assigned a password, you should use the
    <a href="{% url student_sign_in_view %}">standard sign-in process</a>.
  </div>

  <div class="well">
    <form method="post" action="{% url "course.auth.sign_in" %}" class="form-horizontal">
      {% crispy form %}
      <input type="hidden" name="next" value="{{ next }}" />
    </form>
  </div>
{% endblock %}
